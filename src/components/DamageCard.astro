---
/**
 * Damage Card Component
 *
 * The arithmetic of loss. Clean, stark, devastating.
 */
import type { AirQualityMetrics } from '../lib/types';

interface Props {
  metrics: AirQualityMetrics;
}

const { metrics } = Astro.props;

// Hours lost per day = (years lost / 70 years) * 365 days * 24 hours / 365 = years * 24 / 70
const hoursLostPerDay = (metrics.yearsLost * 24) / 70;
---

<section class="damage-card">
  <div class="damage-grid">
    <div class="damage-stat">
      <div class="stat-number">{hoursLostPerDay.toFixed(1)}</div>
      <div class="stat-label">
        <span class="label-main">hours</span>
        <span class="label-sub">lost today</span>
      </div>
    </div>

    <div class="damage-divider">
      <span class="divider-arrow">â†’</span>
    </div>

    <div class="damage-stat">
      <div class="stat-number">{metrics.yearsLost.toFixed(1)}</div>
      <div class="stat-label">
        <span class="label-main">years</span>
        <span class="label-sub">lifetime</span>
      </div>
    </div>
  </div>

  <div class="damage-footer">
    <p class="tagline">This isn't a warning. It's subtraction.</p>
  </div>
</section>

<style>
  .damage-card {
    background: var(--dark-bg);
    border-radius: 12px;
    padding: 3rem 2rem;
    margin-bottom: 2.5rem;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .damage-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(to right, transparent, var(--accent-bright), transparent);
  }

  .damage-grid {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 2.5rem;
  }

  .damage-stat {
    text-align: center;
  }

  .stat-number {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: clamp(4rem, 12vw, 6rem);
    font-weight: 400;
    line-height: 1;
    color: white;
    letter-spacing: -0.03em;
  }

  .stat-label {
    display: flex;
    flex-direction: column;
    margin-top: 0.5rem;
  }

  .label-main {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.5rem;
    font-style: italic;
    color: rgba(255, 255, 255, 0.7);
  }

  .label-sub {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.4);
    margin-top: 0.25rem;
  }

  .damage-divider {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .divider-arrow {
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.2);
  }

  .damage-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .tagline {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.125rem;
    font-style: italic;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
    letter-spacing: -0.01em;
  }

  @media (max-width: 600px) {
    .damage-card {
      padding: 2rem 1.5rem;
    }

    .damage-grid {
      flex-direction: column;
      gap: 1.5rem;
    }

    .divider-arrow {
      transform: rotate(90deg);
    }

    .damage-footer {
      padding-top: 1.5rem;
    }

    .tagline {
      font-size: 1rem;
    }
  }
</style>
