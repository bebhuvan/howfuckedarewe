---
/**
 * Damage Card Component
 *
 * The arithmetic of loss. Hours today. Years lifetime.
 * "This is not a warning. This is arithmetic."
 */
import type { AirQualityMetrics } from '../lib/types';

interface Props {
  metrics: AirQualityMetrics;
}

const { metrics } = Astro.props;

// Hours lost per day = (years lost / 70 years) * 365 days * 24 hours / 365 = years * 24 / 70
const hoursLostPerDay = (metrics.yearsLost * 24) / 70;
---

<section class="damage-card">
  <div class="damage-grid">
    <div class="damage-stat">
      <div class="stat-value">{hoursLostPerDay.toFixed(1)}</div>
      <div class="stat-unit">hours</div>
      <div class="stat-period">lost today</div>
      <p class="stat-explain">
        Each day you breathe this air,
        you give up {hoursLostPerDay.toFixed(1)} hours
        you won't get back. Not someday. Today.
      </p>
    </div>

    <div class="damage-divider">
      <div class="divider-line"></div>
      <span class="divider-icon">â†’</span>
      <div class="divider-line"></div>
    </div>

    <div class="damage-stat">
      <div class="stat-value">{metrics.yearsLost.toFixed(1)}</div>
      <div class="stat-unit">years</div>
      <div class="stat-period">total lifetime impact</div>
      <p class="stat-explain">
        At current levels, continued exposure
        means {metrics.yearsLost.toFixed(1)} years less
        with your family, your work, your life.
      </p>
    </div>
  </div>

  <div class="damage-footer">
    <p class="arithmetic-line">This is not a warning. This is arithmetic.</p>
  </div>
</section>

<style>
  .damage-card {
    background: #1a1a1a;
    border-radius: 12px;
    padding: 2.5rem 2rem;
    margin-bottom: 2rem;
    color: white;
  }

  .damage-grid {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 2rem;
    align-items: center;
    margin-bottom: 2rem;
  }

  .damage-stat {
    text-align: center;
  }

  .stat-value {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 4rem;
    font-weight: 400;
    line-height: 1;
    color: white;
  }

  .stat-unit {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.5rem;
    font-style: italic;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.25rem;
  }

  .stat-period {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }

  .stat-explain {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.5;
    max-width: 200px;
    margin: 0 auto;
  }

  .damage-divider {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    height: 100%;
    justify-content: center;
  }

  .divider-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, transparent, rgba(255,255,255,0.2), transparent);
  }

  .divider-icon {
    color: rgba(255, 255, 255, 0.3);
    font-size: 1.25rem;
  }

  .damage-footer {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .arithmetic-line {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.125rem;
    font-style: italic;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  @media (max-width: 700px) {
    .damage-card {
      padding: 2rem 1.5rem;
    }

    .damage-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .damage-divider {
      flex-direction: row;
      height: auto;
    }

    .divider-line {
      width: 40px;
      height: 1px;
      background: linear-gradient(to right, transparent, rgba(255,255,255,0.2), transparent);
    }

    .divider-icon {
      transform: rotate(90deg);
    }

    .stat-value {
      font-size: 3rem;
    }

    .stat-explain {
      max-width: 280px;
    }
  }
</style>
