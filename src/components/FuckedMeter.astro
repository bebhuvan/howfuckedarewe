---
/**
 * The Fucked Index™
 *
 * How fucked are we? Refined, no emojis, still devastating.
 */
import type { AirQualityMetrics } from '../lib/types';
import { WHO, US_EPA, INDIA_NAAQS } from '../lib/constants';

interface Props {
  metrics: AirQualityMetrics;
  cityName: string;
  pm25?: number;
}

const { metrics, cityName, pm25 } = Astro.props;
const actualPm25 = pm25 ?? (metrics.whoViolation * WHO.PM25_ANNUAL);

// Calculate ratios
const whoFucked = actualPm25 / WHO.PM25_ANNUAL;
const epaFucked = actualPm25 / US_EPA.PM25_ANNUAL;
const indiaFucked = actualPm25 / INDIA_NAAQS.PM25_ANNUAL;

// Determine verdict (no emojis)
function getVerdict(whoRatio: number): { label: string; subtext: string } {
  if (whoRatio <= 1) return {
    label: 'Suspiciously Okay',
    subtext: 'Either the sensors are broken or you should buy a lottery ticket.'
  };
  if (whoRatio <= 2) return {
    label: 'Technically Survivable',
    subtext: 'Your lungs are only mildly disappointed.'
  };
  if (whoRatio <= 4) return {
    label: 'Cope Zone',
    subtext: "You've normalized this. That's the problem."
  };
  if (whoRatio <= 8) return {
    label: 'Very Fucked',
    subtext: 'Other countries would issue health warnings. We issue press releases.'
  };
  if (whoRatio <= 15) return {
    label: 'Extremely Fucked',
    subtext: '"Stay indoors" assumes your indoors isn\'t also fucked.'
  };
  return {
    label: 'LOL',
    subtext: 'At this point, the air quality index is just dark comedy.'
  };
}

const verdict = getVerdict(whoFucked);

// Global comparison
const globalComparisons = [
  { city: 'London', threshold: 25, would: 'issue health advisories' },
  { city: 'Tokyo', threshold: 35, would: 'warn vulnerable groups' },
  { city: 'Los Angeles', threshold: 35, would: 'declare unhealthy air day' },
  { city: 'Sydney', threshold: 25, would: 'trigger emergency alerts' },
];

const triggered = globalComparisons.filter(c => actualPm25 >= c.threshold);
---

<section class="fucked-index">
  <header class="section-header">
    <h2>The Fucked Index™</h2>
    <p class="section-sub">A scientific* measurement of how fucked {cityName} is right now</p>
  </header>

  <!-- Main Display -->
  <div class="index-display">
    <div class="index-number">{whoFucked.toFixed(1)}×</div>
    <div class="index-label">over WHO limit</div>
    <div class="verdict-badge">
      <span class="verdict-text">{verdict.label}</span>
    </div>
    <p class="verdict-subtext">{verdict.subtext}</p>
  </div>

  <!-- Comparison Bars -->
  <div class="comparisons">
    <div class="comparison-item">
      <div class="comp-header">
        <span class="comp-name">WHO</span>
        <span class="comp-standard">5 µg/m³</span>
      </div>
      <div class="comp-bar">
        <div
          class="comp-fill"
          style={`width: ${Math.min(whoFucked * 5, 100)}%`}
          data-severity={whoFucked > 8 ? 'extreme' : whoFucked > 4 ? 'high' : whoFucked > 2 ? 'medium' : 'low'}
        >
          <span class="comp-value">{whoFucked.toFixed(1)}×</span>
        </div>
      </div>
    </div>

    <div class="comparison-item">
      <div class="comp-header">
        <span class="comp-name">US EPA</span>
        <span class="comp-standard">12 µg/m³</span>
      </div>
      <div class="comp-bar">
        <div
          class="comp-fill"
          style={`width: ${Math.min(epaFucked * 12, 100)}%`}
          data-severity={epaFucked > 4 ? 'extreme' : epaFucked > 2 ? 'high' : epaFucked > 1 ? 'medium' : 'low'}
        >
          <span class="comp-value">{epaFucked.toFixed(1)}×</span>
        </div>
      </div>
    </div>

    <div class="comparison-item">
      <div class="comp-header">
        <span class="comp-name">India NAAQS</span>
        <span class="comp-standard">40 µg/m³</span>
      </div>
      <div class="comp-bar">
        <div
          class="comp-fill"
          style={`width: ${Math.min(indiaFucked * 40, 100)}%`}
          data-severity={indiaFucked > 1.5 ? 'extreme' : indiaFucked > 1 ? 'high' : 'low'}
        >
          <span class="comp-value">{indiaFucked.toFixed(1)}×</span>
        </div>
      </div>
      <p class="comp-note">
        {indiaFucked > 1
          ? "Failing even our own 8× looser standard."
          : "Passing. Our standard is just 8× weaker than WHO's."}
      </p>
    </div>
  </div>

  <!-- Global Alerts -->
  {triggered.length > 0 && (
    <div class="global-alerts">
      <p class="alert-header">This level would trigger alerts in:</p>
      <ul class="alert-list">
        {triggered.map(t => (
          <li><strong>{t.city}</strong> would {t.would}</li>
        ))}
      </ul>
      <p class="alert-footer">Here, we call it "moderate" and suggest drinking more water.</p>
    </div>
  )}

  <!-- Scale -->
  <div class="scale-section">
    <div class="scale-wrapper">
      <div class="scale-marker" style={`left: ${Math.min(Math.max((whoFucked / 20) * 100, 3), 97)}%`}>
        <span class="marker-label">YOU</span>
        <span class="marker-line"></span>
      </div>
      <div class="scale-track">
        <div class="zone zone-1"></div>
        <div class="zone zone-2"></div>
        <div class="zone zone-3"></div>
        <div class="zone zone-4"></div>
        <div class="zone zone-5"></div>
      </div>
      <div class="scale-labels">
        <span>1×</span>
        <span>4×</span>
        <span>8×</span>
        <span>15×</span>
        <span>20× WHO</span>
      </div>
    </div>
  </div>

  <p class="footnote">*Not actually scientific. But neither is "moderate air quality" at 10× WHO limits.</p>
</section>

<style>
  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes countUp {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes barGrow {
    from {
      width: 0%;
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: translateX(-50%) scale(1);
      box-shadow: 0 0 0 0 rgba(255, 215, 0, 0.7);
    }
    50% {
      transform: translateX(-50%) scale(1.05);
      box-shadow: 0 0 0 8px rgba(255, 215, 0, 0);
    }
  }

  @keyframes markerDrop {
    from {
      top: -30px;
      opacity: 0;
    }
    to {
      top: 0;
      opacity: 1;
    }
  }

  @keyframes glowPulse {
    0%, 100% {
      box-shadow: 0 0 5px rgba(153, 27, 27, 0.3);
    }
    50% {
      box-shadow: 0 0 20px rgba(153, 27, 27, 0.6);
    }
  }

  .fucked-index {
    background: var(--bg-paper);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2.5rem 2rem;
    margin-bottom: 2.5rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .section-header h2 {
    font-size: 1.75rem;
    margin-bottom: 0.375rem;
  }

  .section-sub {
    font-size: 0.875rem;
    color: var(--text-light);
  }

  /* Main Display */
  .index-display {
    text-align: center;
    padding: 2rem;
    background: var(--bg);
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .index-number {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: clamp(4rem, 12vw, 6rem);
    font-weight: 400;
    line-height: 1;
    color: var(--accent);
    letter-spacing: -0.03em;
    animation: countUp 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.2s backwards;
  }

  .index-label {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .verdict-badge {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: var(--text);
    border-radius: 100px;
    margin-bottom: 0.75rem;
  }

  .verdict-text {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.125rem;
    font-weight: 500;
    color: white;
  }

  .verdict-subtext {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    font-style: italic;
    max-width: 400px;
    margin: 0 auto;
  }

  /* Comparisons */
  .comparisons {
    margin-bottom: 2rem;
  }

  .comparison-item {
    margin-bottom: 1rem;
  }

  .comp-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.375rem;
  }

  .comp-name {
    font-weight: 600;
    font-size: 0.875rem;
  }

  .comp-standard {
    font-size: 0.75rem;
    color: var(--text-light);
  }

  .comp-bar {
    height: 28px;
    background: #e5e5e5;
    border-radius: 4px;
    overflow: hidden;
  }

  .comp-fill {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 0.75rem;
    min-width: 48px;
    animation: barGrow 1s cubic-bezier(0.22, 1, 0.36, 1) 0.4s backwards;
  }

  .comparison-item:nth-child(1) .comp-fill { animation-delay: 0.4s; }
  .comparison-item:nth-child(2) .comp-fill { animation-delay: 0.55s; }
  .comparison-item:nth-child(3) .comp-fill { animation-delay: 0.7s; }

  .comp-fill[data-severity="low"] { background: var(--severity-good); }
  .comp-fill[data-severity="medium"] { background: var(--severity-moderate); }
  .comp-fill[data-severity="high"] { background: var(--severity-bad); }
  .comp-fill[data-severity="extreme"] { background: var(--severity-danger); }

  .comp-value {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: white;
  }

  .comp-note {
    font-size: 0.75rem;
    color: var(--text-light);
    font-style: italic;
    margin-top: 0.375rem;
  }

  /* Global Alerts */
  .global-alerts {
    padding: 1.25rem;
    background: rgba(153, 27, 27, 0.04);
    border-left: 3px solid var(--accent);
    border-radius: 0 8px 8px 0;
    margin-bottom: 2rem;
  }

  .alert-header {
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .alert-list {
    margin: 0 0 0.75rem 1.25rem;
    padding: 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .alert-list li {
    margin-bottom: 0.25rem;
  }

  .alert-footer {
    font-size: 0.8125rem;
    font-style: italic;
    color: var(--text-light);
    margin: 0;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(153, 27, 27, 0.1);
  }

  /* Scale */
  .scale-section {
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
    margin-bottom: 1.5rem;
  }

  .scale-wrapper {
    position: relative;
    padding-top: 2rem;
  }

  .scale-marker {
    position: absolute;
    top: 0;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 2;
    animation: markerDrop 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) 0.9s backwards;
  }

  .marker-label {
    font-size: 0.625rem;
    font-weight: 700;
    color: var(--dark-bg);
    background: #ffd700;
    padding: 0.15rem 0.5rem;
    border-radius: 3px;
    margin-bottom: 2px;
    animation: pulse 2s ease-in-out 1.5s infinite;
  }

  .marker-line {
    width: 2px;
    height: 40px;
    background: var(--dark-bg);
  }

  .scale-track {
    display: flex;
    height: 20px;
    border-radius: 4px;
    overflow: hidden;
  }

  .zone {
    height: 100%;
  }

  .zone-1 { width: 5%; background: var(--severity-good); }
  .zone-2 { width: 15%; background: var(--severity-moderate); }
  .zone-3 { width: 20%; background: var(--severity-bad); }
  .zone-4 { width: 35%; background: var(--severity-danger); }
  .zone-5 { width: 25%; background: var(--severity-extreme); }

  .scale-labels {
    display: flex;
    justify-content: space-between;
    margin-top: 0.375rem;
    font-size: 0.625rem;
    color: var(--text-light);
  }

  .footnote {
    font-size: 0.75rem;
    color: var(--text-light);
    font-style: italic;
    text-align: center;
  }

  @media (max-width: 600px) {
    .fucked-index {
      padding: 1.5rem 1rem;
    }

    .index-display {
      padding: 1.5rem 1rem;
    }

    .verdict-subtext {
      font-size: 0.875rem;
    }

    .comp-bar {
      height: 24px;
    }

    .alert-list {
      font-size: 0.8125rem;
    }

    .scale-labels {
      font-size: 0.5625rem;
    }
  }

  @media (max-width: 400px) {
    .section-header h2 {
      font-size: 1.5rem;
    }

    .index-label {
      font-size: 1rem;
    }

    .verdict-text {
      font-size: 1rem;
    }

    .verdict-subtext {
      font-size: 0.8125rem;
    }

    .comp-name {
      font-size: 0.8125rem;
    }

    .comp-value {
      font-size: 0.8125rem;
    }

    .scale-labels span:nth-child(4) {
      display: none;
    }
  }
</style>
