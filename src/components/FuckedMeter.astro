---
/**
 * The Fucked Indexâ„¢
 *
 * How fucked are we? Let's count the ways.
 * Comparing against baselines that actually matter.
 */
import type { AirQualityMetrics } from '../lib/types';
import { WHO, US_EPA, INDIA_NAAQS } from '../lib/constants';

interface Props {
  metrics: AirQualityMetrics;
  cityName: string;
  pm25?: number;
}

const { metrics, cityName, pm25 } = Astro.props;
const actualPm25 = pm25 ?? (metrics.whoViolation * WHO.PM25_ANNUAL);

// Calculate various "fucked" ratios
const whoFucked = actualPm25 / WHO.PM25_ANNUAL;
const epaFucked = actualPm25 / US_EPA.PM25_ANNUAL;
const indiaFucked = actualPm25 / INDIA_NAAQS.PM25_ANNUAL;

// Determine the verdict
function getVerdict(whoRatio: number): { label: string; subtext: string; emoji: string } {
  if (whoRatio <= 1) return {
    label: 'Suspiciously Okay',
    subtext: 'Either the sensors are broken or you should buy a lottery ticket.',
    emoji: 'ðŸ¤”'
  };
  if (whoRatio <= 2) return {
    label: 'Technically Survivable',
    subtext: 'Your lungs are only mildly disappointed.',
    emoji: 'ðŸ˜'
  };
  if (whoRatio <= 4) return {
    label: 'Certified Cope Zone',
    subtext: 'You\'ve learned to normalize this. That\'s the problem.',
    emoji: 'ðŸ™ƒ'
  };
  if (whoRatio <= 8) return {
    label: 'Very Fucked',
    subtext: 'Other countries would issue health warnings. We issue press releases.',
    emoji: 'ðŸ˜·'
  };
  if (whoRatio <= 15) return {
    label: 'Extremely Fucked',
    subtext: '"Stay indoors" assumes your indoors isn\'t also fucked.',
    emoji: 'ðŸ’€'
  };
  return {
    label: 'LOL',
    subtext: 'At this point, the air quality index is just dark comedy.',
    emoji: 'â˜ ï¸'
  };
}

const verdict = getVerdict(whoFucked);

// Global comparison - what would trigger alerts elsewhere
const globalComparisons = [
  { city: 'London', threshold: 25, would: 'issue health advisories' },
  { city: 'Tokyo', threshold: 35, would: 'warn vulnerable groups' },
  { city: 'Los Angeles', threshold: 35, would: 'declare unhealthy air day' },
  { city: 'Sydney', threshold: 25, would: 'trigger emergency alerts' },
  { city: 'Beijing', threshold: 75, would: 'recommend staying indoors' },
];

const triggered = globalComparisons.filter(c => actualPm25 >= c.threshold);
const wouldTriggerCount = triggered.length;
---

<section class="fucked-index">
  <header class="section-header">
    <h2>The Fucked Indexâ„¢</h2>
    <p class="section-sub">A scientific* measurement of how fucked {cityName} is right now</p>
  </header>

  <!-- The Big Number -->
  <div class="index-display">
    <div class="index-main">
      <span class="index-number">{whoFucked.toFixed(1)}</span>
      <span class="index-unit">Ã— over WHO limit</span>
    </div>
    <div class="index-verdict" data-level={verdict.label.toLowerCase().replace(/\s+/g, '-')}>
      <span class="verdict-emoji">{verdict.emoji}</span>
      <span class="verdict-text">{verdict.label}</span>
    </div>
    <p class="verdict-subtext">{verdict.subtext}</p>
  </div>

  <!-- The Comparison Bars -->
  <div class="comparisons">
    <h3>How fucked, precisely?</h3>

    <div class="comparison-item">
      <div class="comp-label">
        <span class="comp-name">vs WHO</span>
        <span class="comp-standard">5 Âµg/mÂ³ â€” what humans should breathe</span>
      </div>
      <div class="comp-bar-track">
        <div
          class="comp-bar-fill"
          style={`width: ${Math.min(whoFucked * 5, 100)}%`}
          data-severity={whoFucked > 8 ? 'extreme' : whoFucked > 4 ? 'high' : whoFucked > 2 ? 'medium' : 'low'}
        >
          <span class="comp-value">{whoFucked.toFixed(1)}Ã—</span>
        </div>
      </div>
    </div>

    <div class="comparison-item">
      <div class="comp-label">
        <span class="comp-name">vs US EPA</span>
        <span class="comp-standard">12 Âµg/mÂ³ â€” American "acceptable"</span>
      </div>
      <div class="comp-bar-track">
        <div
          class="comp-bar-fill"
          style={`width: ${Math.min(epaFucked * 15, 100)}%`}
          data-severity={epaFucked > 4 ? 'extreme' : epaFucked > 2 ? 'high' : epaFucked > 1 ? 'medium' : 'low'}
        >
          <span class="comp-value">{epaFucked.toFixed(1)}Ã—</span>
        </div>
      </div>
    </div>

    <div class="comparison-item">
      <div class="comp-label">
        <span class="comp-name">vs India NAAQS</span>
        <span class="comp-standard">40 Âµg/mÂ³ â€” our "generous" standard</span>
      </div>
      <div class="comp-bar-track">
        <div
          class="comp-bar-fill"
          style={`width: ${Math.min(indiaFucked * 50, 100)}%`}
          data-severity={indiaFucked > 1.5 ? 'extreme' : indiaFucked > 1 ? 'high' : 'low'}
        >
          <span class="comp-value">{indiaFucked.toFixed(1)}Ã—</span>
        </div>
      </div>
      <p class="comp-note">
        {indiaFucked > 1
          ? "Failing even our own 8Ã— looser standard. Achievement unlocked."
          : "Technically passing. Our standard is just 8Ã— weaker than WHO's."}
      </p>
    </div>
  </div>

  <!-- Global Alert Status -->
  {wouldTriggerCount > 0 && (
    <div class="global-alerts">
      <div class="alert-header">
        <span class="alert-icon">ðŸš¨</span>
        <span class="alert-title">This would trigger alerts in {wouldTriggerCount} {wouldTriggerCount === 1 ? 'city' : 'cities'}</span>
      </div>
      <ul class="alert-list">
        {triggered.map(t => (
          <li>
            <strong>{t.city}</strong> would {t.would} at {t.threshold} Âµg/mÂ³
          </li>
        ))}
      </ul>
      <p class="alert-footer">
        Here, we call it 'moderate' and suggest drinking more water.
      </p>
    </div>
  )}

  <!-- The Scale -->
  <div class="scale-visual">
    <div class="scale-wrapper">
      <div class="scale-marker" style={`left: ${Math.min(Math.max((whoFucked / 20) * 100, 2), 98)}%`}>
        <span class="marker-you">YOU</span>
        <span class="marker-line"></span>
      </div>
      <div class="scale-track">
        <div class="scale-zone zone-ok"></div>
        <div class="scale-zone zone-cope"></div>
        <div class="scale-zone zone-fucked"></div>
        <div class="scale-zone zone-very"></div>
        <div class="scale-zone zone-lol"></div>
      </div>
      <div class="scale-labels">
        <span class="label-ok">OK</span>
        <span class="label-cope">Cope</span>
        <span class="label-fucked">Fucked</span>
