---
/**
 * Dominant Pollutant Component
 *
 * "Today's Villain" - highlights what's driving the AQI
 * with a brief explanation of why it matters.
 */

interface Props {
  pollutant: string | null;
  cityName: string;
}

const { pollutant, cityName } = Astro.props;

// Pollutant metadata
interface PollutantMeta {
  name: string;
  fullName: string;
  sources: string;
  harm: string;
  icon: string;
  color: string;
}

const pollutantData: Record<string, PollutantMeta> = {
  pm25: {
    name: 'PM2.5',
    fullName: 'Fine Particulate Matter',
    sources: 'Vehicle exhaust, construction, burning, industry',
    harm: 'Enters bloodstream, reaches brain and heart, causes cancer',
    icon: 'ðŸ’¨',
    color: '#dc2626',
  },
  pm10: {
    name: 'PM10',
    fullName: 'Coarse Particles',
    sources: 'Road dust, construction, pollen',
    harm: 'Lodges in lungs, triggers asthma, respiratory infections',
    icon: 'ðŸŒ«ï¸',
    color: '#ea580c',
  },
  o3: {
    name: 'Ozone',
    fullName: 'Ground-Level Ozone',
    sources: 'Sunlight + vehicle/industrial emissions',
    harm: 'Burns lung tissue, worsens asthma, reduces lung function',
    icon: 'â˜€ï¸',
    color: '#ca8a04',
  },
  no2: {
    name: 'NOâ‚‚',
    fullName: 'Nitrogen Dioxide',
    sources: 'Vehicle exhaust, power plants',
    harm: 'Inflames airways, increases infection risk, triggers asthma',
    icon: 'ðŸš—',
    color: '#c45a20',
  },
  so2: {
    name: 'SOâ‚‚',
    fullName: 'Sulfur Dioxide',
    sources: 'Coal burning, refineries, smelters',
    harm: 'Irritates throat/lungs, worsens heart disease',
    icon: 'ðŸ­',
    color: '#7c3aed',
  },
  co: {
    name: 'CO',
    fullName: 'Carbon Monoxide',
    sources: 'Incomplete combustion, vehicles, fires',
    harm: 'Displaces oxygen in blood, damages heart and brain',
    icon: 'ðŸ”¥',
    color: '#64748b',
  },
};

// Normalize pollutant key
const normalizedKey = pollutant?.toLowerCase().replace('2', '25').replace('â‚‚', '2') || 'pm25';
const meta = pollutantData[normalizedKey] || pollutantData.pm25;

// Get time-based message
const hour = new Date().getHours();
function getTimeContext(): string {
  if (hour >= 7 && hour <= 10) {
    return "Rush hour traffic is a major contributor right now.";
  }
  if (hour >= 17 && hour <= 20) {
    return "Evening traffic and cooking fires are adding to the load.";
  }
  if (hour >= 22 || hour <= 5) {
    return "Overnight industrial activity and temperature inversions trap pollutants.";
  }
  return "Sources are active throughout the day.";
}
---

{pollutant && (
  <section class="dominant-pollutant">
    <div class="pollutant-badge" style={`--pollutant-color: ${meta.color}`}>
      <span class="badge-icon">{meta.icon}</span>
      <div class="badge-text">
        <span class="badge-label">Today's Main Villain</span>
        <span class="badge-name">{meta.name}</span>
      </div>
    </div>

    <div class="pollutant-details">
      <h4 class="pollutant-fullname">{meta.fullName}</h4>

      <div class="detail-row">
        <span class="detail-label">Where it comes from</span>
        <p class="detail-value">{meta.sources}</p>
      </div>

      <div class="detail-row">
        <span class="detail-label">What it does to you</span>
        <p class="detail-value harm">{meta.harm}</p>
      </div>

      <p class="time-context">{getTimeContext()}</p>
    </div>
  </section>
)}

<style>
  .dominant-pollutant {
    background: white;
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  .pollutant-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.25rem 1.5rem;
    background: color-mix(in srgb, var(--pollutant-color) 8%, transparent);
    border: 2px solid var(--pollutant-color);
    border-radius: 12px;
    min-width: 120px;
  }

  .badge-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .badge-text {
    text-align: center;
  }

  .badge-label {
    display: block;
    font-size: 0.5625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-light);
    margin-bottom: 0.125rem;
  }

  .badge-name {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--pollutant-color);
  }

  .pollutant-details {
    padding-top: 0.25rem;
  }

  .pollutant-fullname {
    font-size: 1.125rem;
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .detail-row {
    margin-bottom: 0.75rem;
  }

  .detail-label {
    display: block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--text-light);
    margin-bottom: 0.125rem;
  }

  .detail-value {
    font-size: 0.9375rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.4;
  }

  .detail-value.harm {
    color: var(--accent);
  }

  .time-context {
    font-size: 0.8125rem;
    font-style: italic;
    color: var(--text-light);
    margin: 0;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border);
  }

  @media (max-width: 600px) {
    .dominant-pollutant {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .pollutant-badge {
      margin: 0 auto;
    }

    .pollutant-details {
      text-align: left;
    }
  }
</style>
