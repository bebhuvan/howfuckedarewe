---
/**
 * Risk Context Component
 *
 * Who's at risk and what activities are dangerous.
 * Makes the abstract personal.
 */

interface Props {
  pm25: number;
  cityName: string;
}

const { pm25, cityName } = Astro.props;

// Risk groups and their vulnerability thresholds
interface RiskGroup {
  group: string;
  icon: string;
  threshold: number;  // PM2.5 level where risk begins
  status: 'safe' | 'caution' | 'avoid' | 'danger';
  action: string;
}

function getRiskStatus(pm25: number, threshold: number): 'safe' | 'caution' | 'avoid' | 'danger' {
  if (pm25 < threshold) return 'safe';
  if (pm25 < threshold * 1.5) return 'caution';
  if (pm25 < threshold * 2.5) return 'avoid';
  return 'danger';
}

const riskGroups: RiskGroup[] = [
  {
    group: 'Children',
    icon: 'ðŸ‘¶',
    threshold: 12,
    status: getRiskStatus(pm25, 12),
    action: pm25 < 12 ? 'Outdoor play OK' : pm25 < 35 ? 'Limit outdoor time' : 'Keep indoors',
  },
  {
    group: 'Elderly',
    icon: 'ðŸ‘´',
    threshold: 15,
    status: getRiskStatus(pm25, 15),
    action: pm25 < 15 ? 'Normal activity' : pm25 < 35 ? 'Reduce exertion' : 'Stay inside',
  },
  {
    group: 'Pregnant',
    icon: 'ðŸ¤°',
    threshold: 12,
    status: getRiskStatus(pm25, 12),
    action: pm25 < 12 ? 'Normal activity' : pm25 < 25 ? 'Limit exposure' : 'Avoid outdoors',
  },
  {
    group: 'Asthmatics',
    icon: 'ðŸ«',
    threshold: 25,
    status: getRiskStatus(pm25, 25),
    action: pm25 < 25 ? 'Monitor symptoms' : pm25 < 50 ? 'Carry inhaler' : 'Emergency risk',
  },
  {
    group: 'Athletes',
    icon: 'ðŸƒ',
    threshold: 35,
    status: getRiskStatus(pm25, 35),
    action: pm25 < 35 ? 'Outdoor sports OK' : pm25 < 55 ? 'Indoor gym only' : 'Skip workout',
  },
  {
    group: 'Workers',
    icon: 'ðŸ‘·',
    threshold: 55,
    status: getRiskStatus(pm25, 55),
    action: pm25 < 55 ? 'Normal work' : pm25 < 150 ? 'Mask required' : 'Hazard pay?',
  },
];

// Count at-risk groups
const atRiskCount = riskGroups.filter(g => g.status !== 'safe').length;

// Activities and their safety
interface Activity {
  activity: string;
  safe: boolean;
  note: string;
}

const activities: Activity[] = [
  {
    activity: 'Morning jog',
    safe: pm25 < 35,
    note: pm25 < 35 ? 'Acceptable' : pm25 < 55 ? 'Not recommended' : 'Lung damage',
  },
  {
    activity: 'Window open',
    safe: pm25 < 25,
    note: pm25 < 25 ? 'OK for ventilation' : 'Keep sealed',
  },
  {
    activity: 'Outdoor dining',
    safe: pm25 < 50,
    note: pm25 < 50 ? 'Enjoy the smog' : 'Eat inside',
  },
  {
    activity: 'Kids playing',
    safe: pm25 < 35,
    note: pm25 < 35 ? 'Supervised OK' : 'Indoor play only',
  },
];
---

<section class="risk-context">
  <div class="risk-header">
    <h3>Who's At Risk Right Now</h3>
    <div class="risk-summary">
      <span class="risk-count">{atRiskCount}</span>
      <span class="risk-label">of {riskGroups.length} groups should take precautions</span>
    </div>
  </div>

  <div class="risk-grid">
    {riskGroups.map((group) => (
      <div class:list={['risk-card', group.status]}>
        <div class="risk-icon">{group.icon}</div>
        <div class="risk-info">
          <span class="risk-group">{group.group}</span>
          <span class="risk-action">{group.action}</span>
        </div>
        <div class:list={['risk-indicator', group.status]}>
          {group.status === 'safe' && 'âœ“'}
          {group.status === 'caution' && '!'}
          {group.status === 'avoid' && '!!'}
          {group.status === 'danger' && 'âš '}
        </div>
      </div>
    ))}
  </div>

  <div class="activities-section">
    <h4>Activity Check</h4>
    <div class="activities-grid">
      {activities.map((act) => (
        <div class:list={['activity-item', { safe: act.safe, unsafe: !act.safe }]}>
          <span class="activity-name">{act.activity}</span>
          <span class="activity-note">{act.note}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .risk-context {
    background: white;
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .risk-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .risk-header h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .risk-summary {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.375rem;
  }

  .risk-count {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 2rem;
    font-weight: 400;
    color: #c41e1e;
  }

  .risk-label {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .risk-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .risk-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    border-radius: 8px;
    background: #f8f8f8;
    border: 1px solid var(--border);
  }

  .risk-card.caution {
    background: #fefce8;
    border-color: #fde047;
  }

  .risk-card.avoid {
    background: #fff7ed;
    border-color: #fed7aa;
  }

  .risk-card.danger {
    background: #fef2f2;
    border-color: #fecaca;
  }

  .risk-icon {
    font-size: 1.5rem;
    line-height: 1;
  }

  .risk-info {
    flex: 1;
    min-width: 0;
  }

  .risk-group {
    display: block;
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text);
  }

  .risk-action {
    display: block;
    font-size: 0.6875rem;
    color: var(--text-muted);
  }

  .risk-indicator {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 700;
  }

  .risk-indicator.safe {
    background: #dcfce7;
    color: #16a34a;
  }

  .risk-indicator.caution {
    background: #fef08a;
    color: #a16207;
  }

  .risk-indicator.avoid {
    background: #fed7aa;
    color: #c2410c;
  }

  .risk-indicator.danger {
    background: #fecaca;
    color: #dc2626;
  }

  .activities-section {
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .activities-section h4 {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-light);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .activities-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  .activity-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.625rem 0.875rem;
    border-radius: 6px;
    font-size: 0.8125rem;
  }

  .activity-item.safe {
    background: #f0fdf4;
    border: 1px solid #bbf7d0;
  }

  .activity-item.unsafe {
    background: #fef2f2;
    border: 1px solid #fecaca;
  }

  .activity-name {
    font-weight: 500;
  }

  .activity-note {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .activity-item.unsafe .activity-note {
    color: #dc2626;
  }

  @media (max-width: 768px) {
    .risk-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 500px) {
    .risk-context {
      padding: 1.5rem 1rem;
    }

    .risk-grid {
      grid-template-columns: 1fr;
    }

    .activities-grid {
      grid-template-columns: 1fr;
    }

    .risk-count {
      font-size: 1.5rem;
    }

    .risk-label {
      font-size: 0.8125rem;
    }
  }

  @media (max-width: 400px) {
    .risk-card {
      padding: 0.625rem;
      gap: 0.5rem;
    }

    .risk-icon {
      font-size: 1.25rem;
    }

    .risk-group {
      font-size: 0.75rem;
    }

    .risk-action {
      font-size: 0.625rem;
    }

    .risk-indicator {
      width: 20px;
      height: 20px;
      font-size: 0.625rem;
    }

    .activity-item {
      padding: 0.5rem 0.75rem;
      font-size: 0.75rem;
    }

    .activity-note {
      font-size: 0.6875rem;
    }
  }
</style>
