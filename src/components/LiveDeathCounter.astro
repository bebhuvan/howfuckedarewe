---
/**
 * Live Death Counter Component
 *
 * Deaths since page load. Real-time. Devastating.
 */
import { INDIA_MORTALITY } from '../lib/constants';

interface Props {
  cityName?: string;
  cityDeathsPerYear?: number;
}

const { cityName, cityDeathsPerYear } = Astro.props;

const nationalDeathsPerSecond = INDIA_MORTALITY.ANNUAL_DEATHS / (365 * 24 * 60 * 60);
---

<section class="death-counter">
  <div class="counter-label">Since you opened this page</div>

  <div class="counter-main">
    <div class="counter-number" id="live-death-count" data-rate={nationalDeathsPerSecond}>0</div>
    <div class="counter-unit">deaths from air pollution</div>
  </div>

  <div class="counter-footer">
    <p class="footer-stat">
      {(INDIA_MORTALITY.ANNUAL_DEATHS / 1_000_000).toFixed(1)} million/year
      <span class="footer-source">State of Global Air 2024</span>
    </p>
    <p class="footer-note">
      {INDIA_MORTALITY.UNDER_5_DAILY} of today's deaths will be children under 5.
    </p>
  </div>
</section>

<script>
  const counter = document.getElementById('live-death-count');
  if (counter) {
    const rate = parseFloat(counter.dataset.rate || '0');
    let startTime = Date.now();

    function updateCounter() {
      const elapsed = (Date.now() - startTime) / 1000;
      const deaths = elapsed * rate;
      counter.textContent = Math.floor(deaths).toString();
      requestAnimationFrame(updateCounter);
    }

    updateCounter();
  }
</script>

<style>
  .death-counter {
    background: var(--dark-bg);
    border-radius: 12px;
    padding: 3rem 2rem;
    margin-bottom: 2.5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .death-counter::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(to right, transparent, #ef4444, transparent);
  }

  .counter-label {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.35);
    margin-bottom: 1.5rem;
  }

  .counter-main {
    margin-bottom: 2rem;
  }

  .counter-number {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: clamp(5rem, 15vw, 8rem);
    font-weight: 400;
    font-variant-numeric: tabular-nums;
    color: #ef4444;
    line-height: 1;
    letter-spacing: -0.03em;
  }

  .counter-unit {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.5);
    margin-top: 0.5rem;
  }

  .counter-footer {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .footer-stat {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.5rem;
  }

  .footer-source {
    font-size: 0.75rem;
    font-style: italic;
    color: rgba(255, 255, 255, 0.3);
    margin-left: 0.25rem;
  }

  .footer-source::before {
    content: 'â€” ';
  }

  .footer-note {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.4);
    font-style: italic;
    margin: 0;
  }

  @media (max-width: 600px) {
    .death-counter {
      padding: 2rem 1.5rem;
    }

    .counter-unit {
      font-size: 0.875rem;
    }
  }
</style>
