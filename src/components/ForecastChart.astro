---
/**
 * Forecast Chart Component
 *
 * 7-day PM2.5 forecast visualization.
 */
import type { ForecastDay } from '../lib/types';

interface Props {
  forecast: ForecastDay[];
}

const { forecast } = Astro.props;

if (forecast.length === 0) {
  return null;
}

// Calculate scale
const maxFuckedIndex = Math.max(...forecast.map(d => d.metrics.fuckedIndex), 5);
const chartHeight = 120;

function getBarHeight(fuckedIndex: number): number {
  return (fuckedIndex / maxFuckedIndex) * chartHeight;
}

function getBarColor(fuckedIndex: number): string {
  if (fuckedIndex < 0.5) return '#6b8e6b';
  if (fuckedIndex < 2) return '#a3a322';
  if (fuckedIndex < 5) return '#c45a20';
  return '#b91c1c';
}
---

<section class="forecast-section">
  <h2>7-Day Forecast</h2>

  <div class="forecast-chart">
    <div class="chart-bars">
      {forecast.map((day, index) => (
        <div class="bar-container">
          <div class="bar-value">{day.metrics.fuckedIndex.toFixed(1)}</div>
          <div
            class="bar"
            style={`height: ${getBarHeight(day.metrics.fuckedIndex)}px; background: ${getBarColor(day.metrics.fuckedIndex)}`}
          >
            <div class="bar-tooltip">
              <strong>{day.dateLabel}</strong><br>
              PM2.5: {day.pm25Concentration.toFixed(1)} µg/m³<br>
              {day.metrics.cigarettesPerDay.toFixed(1)} cigs/day
            </div>
          </div>
          <div class="bar-label">
            <span class="day">{day.dayLabel}</span>
            <span class="date">{day.dateLabel.split(' ')[0]}</span>
          </div>
          {index === 0 && <div class="today-indicator">Today</div>}
        </div>
      ))}
    </div>

    <div class="chart-legend">
      <div class="legend-item">
        <span class="legend-color" style="background: #6b8e6b"></span>
        <span>&lt;0.5 Fine*</span>
      </div>
      <div class="legend-item">
        <span class="legend-color" style="background: #a3a322"></span>
        <span>0.5-2 Cope</span>
      </div>
      <div class="legend-item">
        <span class="legend-color" style="background: #c45a20"></span>
        <span>2-5 Denial</span>
      </div>
      <div class="legend-item">
        <span class="legend-color" style="background: #b91c1c"></span>
        <span>&gt;5 LOL</span>
      </div>
    </div>
  </div>

  <p class="forecast-note">
    Forecast based on WAQI predictions. Actual conditions may vary.
  </p>
</section>

<style>
  .forecast-section {
    margin-bottom: 2rem;
  }

  h2 {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .forecast-chart {
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 8px;
    padding: 1.5rem;
  }

  .chart-bars {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    height: 180px;
    padding-bottom: 40px;
    position: relative;
  }

  .bar-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    max-width: 60px;
  }

  .bar-value {
    font-size: 0.75rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.25rem;
  }

  .bar {
    width: 70%;
    max-width: 40px;
    border-radius: 4px 4px 0 0;
    position: relative;
    cursor: pointer;
    transition: transform 0.15s ease;
  }

  .bar:hover {
    transform: scaleY(1.05);
  }

  .bar-tooltip {
    display: none;
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: #1a1a1a;
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    font-size: 0.75rem;
    white-space: nowrap;
    z-index: 10;
    margin-bottom: 8px;
  }

  .bar:hover .bar-tooltip {
    display: block;
  }

  .bar-label {
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    transform: translateY(100%);
    padding-top: 0.5rem;
  }

  .day {
    font-size: 0.75rem;
    font-weight: 600;
    color: #333;
  }

  .date {
    font-size: 0.625rem;
    color: #999;
  }

  .today-indicator {
    position: absolute;
    bottom: -35px;
    font-size: 0.625rem;
    font-weight: 600;
    color: #b91c1c;
    text-transform: uppercase;
  }

  .chart-legend {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.6875rem;
    color: #666;
  }

  .legend-color {
    width: 12px;
    height: 12px;
    border-radius: 2px;
  }

  .forecast-note {
    font-size: 0.75rem;
    color: #999;
    text-align: center;
    margin-top: 0.75rem;
    font-style: italic;
  }

  @media (max-width: 600px) {
    .chart-legend {
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .bar-value {
      font-size: 0.625rem;
    }
  }
</style>
