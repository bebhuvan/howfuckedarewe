---
/**
 * Live Death Counter Component — REDESIGNED
 *
 * Deaths since page load. Real-time. Devastating.
 * Now impossible to ignore.
 */
import { INDIA_MORTALITY } from "../../lib/constants";

interface Props {
  cityName?: string;
  cityDeathsPerYear?: number;
}

const { cityName, cityDeathsPerYear } = Astro.props;

const nationalDeathsPerSecond =
  INDIA_MORTALITY.ANNUAL_DEATHS / (365 * 24 * 60 * 60);

// Calculate when the next death will happen
const msPerDeath = 1000 / nationalDeathsPerSecond;
---

<section class="death-counter">
  <div class="counter-header">
    <div class="since-label">
      <span class="since-icon">⏱</span>
      <span class="since-text">Since you opened this page</span>
    </div>
  </div>

  <div class="counter-main">
    <div
      class="counter-number"
      id="live-death-count"
      data-rate={nationalDeathsPerSecond}
    >
      0
    </div>
    <div class="counter-unit">
      <span class="unit-people">people</span>
      <span class="unit-verb">have died</span>
      <span class="unit-cause">from air pollution</span>
    </div>
  </div>

  <div class="counter-context">
    <div class="context-timer">
      <span class="timer-label">Next death in approximately</span>
      <span class="timer-value" id="death-countdown" data-interval={msPerDeath}
        >...</span
      >
    </div>
  </div>

  <div class="counter-footer">
    <div class="footer-stats">
      <div class="stat-item">
        <span class="stat-value">21 lakh</span>
        <span class="stat-label">deaths per year</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <span class="stat-value">{INDIA_MORTALITY.UNDER_5_DAILY}</span>
        <span class="stat-label">children under 5 daily</span>
      </div>
    </div>
    <p class="footer-source">
      <a href="https://www.stateofglobalair.org/" target="_blank" rel="noopener"
        >State of Global Air 2024</a
      >
    </p>
    <p class="footer-kicker">
      The red line is what you breathed. The green dashed line is what lungs
      prefer. They haven't met.
    </p>
  </div>
</section>

<script>
  const counter = document.getElementById("live-death-count");
  const countdown = document.getElementById("death-countdown");

  if (counter) {
    const el = counter;
    const rate = parseFloat(counter.dataset.rate || "0");
    const msPerDeath = 1000 / rate;
    let startTime = Date.now();

    function updateCounter() {
      const elapsed = (Date.now() - startTime) / 1000;
      const deaths = elapsed * rate;
      const deathCount = Math.floor(deaths);
      el.textContent = deathCount.toString();

      // Update countdown
      if (countdown) {
        const timeSinceLastDeath = (deaths - deathCount) * (1000 / rate);
        const timeToNextDeath = msPerDeath - timeSinceLastDeath;
        const seconds = Math.max(0, timeToNextDeath / 1000).toFixed(1);
        countdown.textContent = `${seconds}s`;
      }

      requestAnimationFrame(updateCounter);
    }

    updateCounter();
  }
</script>

