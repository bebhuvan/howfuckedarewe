---
/**
 * Death Counter Component — REDESIGNED
 *
 * Real-time counter showing estimated deaths from air pollution.
 * Based on WHO/Lancet data. Now with maximum visual impact.
 */
import { INDIA_MORTALITY } from "../../lib/constants";

interface Props {
  annualDeaths?: number; // If provided, use city-specific estimate
  cityName?: string;
  showNational?: boolean;
}

const { annualDeaths, cityName, showNational = true } = Astro.props;

// Deaths per second (national)
const nationalDeathsPerSecond =
  INDIA_MORTALITY.ANNUAL_DEATHS / (365 * 24 * 60 * 60);

// Deaths per second (city-specific, if provided)
const cityDeathsPerSecond = annualDeaths
  ? annualDeaths / (365 * 24 * 60 * 60)
  : null;

// Estimated deaths since midnight (for initial display)
const now = new Date();
const secondsSinceMidnight =
  now.getHours() * 3600 + now.getMinutes() * 60 + now.getSeconds();
const deathsToday = Math.floor(nationalDeathsPerSecond * secondsSinceMidnight);

// Calculate time for one death
const secondsPerDeath = 1 / nationalDeathsPerSecond;
const timePerDeath =
  secondsPerDeath < 60
    ? `${secondsPerDeath.toFixed(1)} seconds`
    : `${(secondsPerDeath / 60).toFixed(1)} minutes`;
---

<section class="death-counter">
  <div class="counter-content">
    <!-- The shocking headline -->
    <div class="counter-headline">
      <span class="headline-prefix">Today alone,</span>
      <span class="headline-emphasis">air pollution has killed</span>
    </div>

    <!-- The big number -->
    <div
      class="counter-value"
      id="death-counter"
      data-rate={nationalDeathsPerSecond}
      data-start={deathsToday}
    >
      {deathsToday.toLocaleString("en-IN")}
    </div>

    <div class="counter-label">Indians</div>

    <!-- The kicker -->
    <div class="counter-kicker">
      <span class="kicker-stat"
        >That's one person every <strong>{timePerDeath}</strong>.</span
      >
      <span class="kicker-dark">We're making excellent progress.</span>
    </div>

    <!-- Source with methodology link -->
    <div class="counter-source">
      <span class="source-stat">21 lakh deaths/year</span>
      <span class="source-cite">
        <a
          href="https://www.stateofglobalair.org/"
          target="_blank"
          rel="noopener">State of Global Air 2024</a
        >
        •
        <a href="/methodology">Our methodology</a>
      </span>
    </div>

    {
      cityDeathsPerSecond && cityName && (
        <div class="city-counter">
          <span class="city-label">In {cityName} alone:</span>
          <span
            class="city-value"
            id="city-death-counter"
            data-rate={cityDeathsPerSecond}
          >
            ~
            {Math.floor(
              cityDeathsPerSecond * secondsSinceMidnight,
            ).toLocaleString("en-IN")}
          </span>
          <span class="city-note">deaths today (and counting)</span>
        </div>
      )
    }
  </div>

  <!-- The breakdown that makes it real -->
  <div class="counter-breakdown">
    <div class="breakdown-item">
      <span class="breakdown-value"
        >{INDIA_MORTALITY.UNDER_5_DAILY.toLocaleString("en-IN")}</span
      >
      <span class="breakdown-label">children under 5</span>
      <span class="breakdown-context">die every single day</span>
    </div>
    <div class="breakdown-divider"></div>
    <div class="breakdown-item">
      <span class="breakdown-value"
        >{
          Math.round(nationalDeathsPerSecond * 60).toLocaleString("en-IN")
        }</span
      >
      <span class="breakdown-label">people dead</span>
      <span class="breakdown-context">in the time it takes to read this</span>
    </div>
  </div>
</section>

<script>
  // Real-time counter animation
  const counter = document.getElementById("death-counter");
  const cityCounter = document.getElementById("city-death-counter");

  if (counter) {
    const rate = parseFloat(counter.dataset.rate || "0");
    let count = parseInt(counter.dataset.start || "0", 10);

    setInterval(() => {
      count += rate;
      counter.textContent = Math.floor(count).toLocaleString("en-IN");
    }, 1000);
  }

  if (cityCounter) {
    const rate = parseFloat(cityCounter.dataset.rate || "0");
    let count = 0;

    // Get seconds since midnight
    const now = new Date();
    const secondsSinceMidnight =
      now.getHours() * 3600 + now.getMinutes() * 60 + now.getSeconds();
    count = rate * secondsSinceMidnight;

    setInterval(() => {
      count += rate;
      cityCounter.textContent = `~${Math.floor(count).toLocaleString("en-IN")}`;
    }, 1000);
  }
</script>

