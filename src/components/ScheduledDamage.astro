---
/**
 * Scheduled Damage Component
 *
 * Your forecast of harm. Each day is a bar. Each bar is damage.
 * "Zero safe days this week."
 */
import type { ForecastDay } from '../lib/types';
import { WHO } from '../lib/constants';

interface Props {
  forecast: ForecastDay[];
}

const { forecast } = Astro.props;

// Calculate weekly totals
const weeklyPm25 = forecast.reduce((sum, d) => sum + d.pm25Concentration, 0);
const weeklyAvgPm25 = weeklyPm25 / forecast.length;
const weeklyCigarettes = forecast.reduce((sum, d) => sum + d.metrics.cigarettesPerDay, 0);
const safeDays = forecast.filter(d => d.pm25Concentration <= WHO.PM25_ANNUAL).length;

// Find max for scaling
const maxPm25 = Math.max(...forecast.map(d => d.pm25Concentration));

// Bright color scale for visual clarity
function getBarColor(pm25: number): string {
  if (pm25 <= 12) return '#22c55e'; // Green - good
  if (pm25 <= 35) return '#eab308'; // Yellow - moderate
  if (pm25 <= 55) return '#f97316'; // Orange - unhealthy
  return '#dc2626'; // Red - severe
}

function getSeverityLabel(pm25: number): string {
  if (pm25 <= 12) return 'Good';
  if (pm25 <= 35) return 'Moderate';
  if (pm25 <= 55) return 'Unhealthy';
  return 'Hazardous';
}

function getSeverityClass(pm25: number): string {
  if (pm25 <= 12) return 'good';
  if (pm25 <= 35) return 'moderate';
  if (pm25 <= 55) return 'unhealthy';
  return 'severe';
}
---

<section class="scheduled-damage">
  <div class="section-header">
    <h2>Your Scheduled Damage</h2>
    <p class="section-intro">
      <span class="full-text">The next 7 days. Each column is a day of your life you won't get back.</span>
      <span class="mobile-text">The next 4 days. Each column is damage.</span>
    </p>
  </div>

  <div class="forecast-chart">
    {forecast.map((day, i) => {
      const heightPercent = (day.pm25Concentration / maxPm25) * 100;
      const isToday = i === 0;
      const barColor = getBarColor(day.pm25Concentration);
      const severityClass = getSeverityClass(day.pm25Concentration);

      return (
        <div class:list={['forecast-day', { today: isToday }]}>
          <div class="day-label">
            {isToday ? 'TODAY' : day.dayLabel.toUpperCase()}
            <span class="day-date">{day.dateLabel}</span>
          </div>

          <div class="bar-container">
            <div
              class="bar"
              style={`height: ${heightPercent}%; background: ${barColor};`}
            >
              <span class="bar-value">{day.pm25Concentration.toFixed(0)}</span>
            </div>
          </div>

          <div class="day-stats">
            <div class="stat-cigs">{day.metrics.cigarettesPerDay.toFixed(1)}</div>
            <div class="stat-label">cigs</div>
          </div>

          <div class:list={['day-severity', severityClass]}>
            {getSeverityLabel(day.pm25Concentration)}
          </div>
        </div>
      );
    })}
  </div>

  <div class="weekly-summary">
    <div class="summary-stat">
      <span class="summary-value">{weeklyCigarettes.toFixed(0)}</span>
      <span class="summary-label">cigarettes this week just by breathing</span>
    </div>

    <div class="summary-note">
      {safeDays === 0 ? (
        <span class="zero-safe">Zero safe days this week. Your lungs will accumulate damage every single day.</span>
      ) : safeDays === 7 ? (
        <span class="all-safe">All 7 days within safe limits. A rare week. Enjoy it.</span>
      ) : (
        <span>{safeDays} day{safeDays > 1 ? 's' : ''} within safe limits. The other {7 - safeDays}? Damage.</span>
      )}
    </div>

    <p class="forecast-note">Forecast from a single monitoring station. Actual conditions may vary by area.</p>
  </div>
</section>

<style>
