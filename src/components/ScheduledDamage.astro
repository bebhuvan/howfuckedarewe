    font-size: 0.9375rem;
    color: var(--text-muted);
  }

  .section-intro .mobile-text {
    display: none;
  }

  .forecast-chart {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .forecast-day {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .forecast-day.today {
    background: white;
    margin: -0.5rem;
    padding: 0.5rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .day-label {
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    text-align: center;
  }

  .day-date {
    display: block;
    font-weight: 400;
    color: var(--text-light);
  }

  .bar-container {
    width: 100%;
    height: 120px;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }

  .bar {
    width: 60%;
    min-height: 20px;
    border-radius: 4px 4px 0 0;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 0.25rem;
    transition: height 0.3s ease;
  }

  .bar-value {
    font-size: 0.75rem;
    font-weight: 600;
    color: white;
  }

  .day-stats {
    text-align: center;
  }

  .stat-cigs {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--text);
  }

  .stat-label {
    font-size: 0.625rem;
    color: var(--text-light);
    text-transform: uppercase;
  }

  .day-severity {
    font-size: 0.5625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-light);
  }

  .day-severity.good {
    color: #16a34a;
  }

  .day-severity.moderate {
    color: #ca8a04;
  }

  .day-severity.unhealthy {
    color: #ea580c;
  }

  .day-severity.severe {
    color: #dc2626;
  }

  .weekly-summary {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .summary-stat {
    margin-bottom: 0.75rem;
  }

  .summary-value {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 3rem;
    font-weight: 400;
    color: #c41e1e;
  }

  .summary-label {
    display: block;
    font-size: 0.9375rem;
    color: var(--text-muted);
  }

  .summary-note {
    font-size: 0.875rem;
    color: var(--text-light);
    font-style: italic;
  }

  .zero-safe {
    color: #c41e1e;
  }

  .all-safe {
    color: #6b8e6b;
  }

  .forecast-note {
    font-size: 0.75rem;
    color: var(--text-light);
    text-align: center;
    margin-top: 1rem;
    font-style: italic;
  }

  @media (max-width: 700px) {
    .scheduled-damage {
      padding: 1.5rem 1rem;
    }

    .forecast-chart {
      gap: 0.25rem;
    }

    .bar-container {
      height: 80px;
    }

    .bar {
      width: 80%;
    }

    .day-label {
      font-size: 0.5625rem;
    }

    .stat-cigs {
      font-size: 1rem;
    }

    .summary-value {
      font-size: 2.5rem;
    }

    .forecast-day.today {
      margin: -0.25rem;
      padding: 0.25rem;
    }
  }

  @media (max-width: 500px) {
    .forecast-chart {
      grid-template-columns: repeat(4, 1fr);
    }

    .forecast-day:nth-child(n+5) {
      display: none;
    }

    /* Hide original text and show mobile-friendly version */
    .section-intro .full-text {
      display: none;
    }

    .section-intro .mobile-text {
      display: inline;
    }
  }
</style>
