---
/**
 * Historical Trends Component
 *
 * Shows PM2.5 trends over the last 24 hours and 7 days.
 * Uses D1 historical data when available.
 */
import type { DailyAggregateRow, CitySnapshotRow } from '../../lib/db';

interface Props {
  hourlyData: CitySnapshotRow[];
  dailyData: DailyAggregateRow[];
  cityName: string;
}

const { hourlyData, dailyData, cityName } = Astro.props;

// Skip if no data
const hasHourlyData = hourlyData.length > 0;
const hasDailyData = dailyData.length > 0;

// Process hourly data for chart
const hourlyPoints = hourlyData.map((d) => ({
  hour: new Date(d.recorded_at).getHours(),
  pm25: d.avg_pm25 || 0,
  time: new Date(d.recorded_at).toLocaleTimeString('en-IN', {
    hour: '2-digit',
    minute: '2-digit',
    hour12: false,
  }),
}));

// Process daily data
const dailyPoints = dailyData.map((d) => ({
  date: d.date,
  pm25: d.avg_pm25 || 0,
  label: new Date(d.date).toLocaleDateString('en-IN', {
    day: 'numeric',
    month: 'short',
  }),
}));

// Calculate stats
const avgHourly =
  hourlyPoints.length > 0
    ? hourlyPoints.reduce((sum, p) => sum + p.pm25, 0) / hourlyPoints.length
    : 0;
const maxHourly =
  hourlyPoints.length > 0 ? Math.max(...hourlyPoints.map((p) => p.pm25)) : 0;
const minHourly =
  hourlyPoints.length > 0 ? Math.min(...hourlyPoints.map((p) => p.pm25)) : 0;

const avgDaily =
  dailyPoints.length > 0
    ? dailyPoints.reduce((sum, p) => sum + p.pm25, 0) / dailyPoints.length
    : 0;

// Color function
function getColor(pm25: number): string {
  if (pm25 <= 12) return '#22c55e';
  if (pm25 <= 35) return '#eab308';
  if (pm25 <= 55) return '#f97316';
  return '#dc2626';
}

// Trend indicator
function getTrend(): { direction: 'up' | 'down' | 'stable'; percent: number } {
  if (hourlyPoints.length < 2) return { direction: 'stable', percent: 0 };

  const recent = hourlyPoints.slice(-6);
  const older = hourlyPoints.slice(0, 6);

  const recentAvg = recent.reduce((s, p) => s + p.pm25, 0) / recent.length;
  const olderAvg = older.reduce((s, p) => s + p.pm25, 0) / older.length;

  const change = ((recentAvg - olderAvg) / olderAvg) * 100;

  if (Math.abs(change) < 5) return { direction: 'stable', percent: 0 };
  return {
    direction: change > 0 ? 'up' : 'down',
    percent: Math.abs(change),
  };
}

const trend = getTrend();
---

{(hasHourlyData || hasDailyData) && (
  <section class="historical-trends">
    <div class="trends-header">
      <h3>Air Quality Trends</h3>
      <p class="trends-intro">Historical data from our monitoring</p>
    </div>

    {hasHourlyData && (
      <div class="trend-section">
        <div class="section-header">
          <h4>Last 24 Hours</h4>
          <div class="trend-indicator" data-direction={trend.direction}>
            {trend.direction === 'up' && (
              <span class="trend-arrow">↑</span>
            )}
            {trend.direction === 'down' && (
              <span class="trend-arrow">↓</span>
            )}
            {trend.direction !== 'stable' && (
              <span class="trend-percent">{trend.percent.toFixed(0)}%</span>
            )}
            {trend.direction === 'stable' && (
              <span class="trend-stable">Stable</span>
            )}
          </div>
        </div>

        <div class="hourly-chart">
          <div class="chart-bars">
            {hourlyPoints.map((point) => {
              const height = Math.max(5, (point.pm25 / maxHourly) * 100);
              const color = getColor(point.pm25);
              return (
                <div class="bar-wrapper" title={`${point.time}: ${point.pm25.toFixed(0)} µg/m³`}>
                  <div
                    class="bar"
                    style={`height: ${height}%; background: ${color};`}
                  ></div>
                  <span class="bar-label">{point.hour}</span>
                </div>
              );
            })}
          </div>
          <div class="chart-reference">
            <div class="reference-line who" style="bottom: calc(5 / {maxHourly} * 100%)">
              <span>WHO</span>
            </div>
          </div>
        </div>

        <div class="hourly-stats">
          <div class="stat">
            <span class="stat-label">Average</span>
            <span class="stat-value" style={`color: ${getColor(avgHourly)}`}>
              {avgHourly.toFixed(0)}
            </span>
          </div>
          <div class="stat">
            <span class="stat-label">Peak</span>
            <span class="stat-value" style={`color: ${getColor(maxHourly)}`}>
              {maxHourly.toFixed(0)}
            </span>
          </div>
          <div class="stat">
            <span class="stat-label">Low</span>
            <span class="stat-value" style={`color: ${getColor(minHourly)}`}>
              {minHourly.toFixed(0)}
            </span>
          </div>
        </div>
      </div>
    )}

    {hasDailyData && (
      <div class="trend-section">
        <div class="section-header">
          <h4>Last 7 Days</h4>
        </div>

        <div class="daily-chart">
          {dailyPoints.slice(-7).map((point) => {
            const color = getColor(point.pm25);
            return (
              <div class="daily-item">
                <span class="daily-label">{point.label}</span>
                <div class="daily-bar-wrapper">
                  <div
                    class="daily-bar"
                    style={`width: ${Math.min(100, (point.pm25 / 150) * 100)}%; background: ${color};`}
                  >
                    <span class="daily-value">{point.pm25.toFixed(0)}</span>
                  </div>
                </div>
              </div>
            );
          })}
        </div>

        <p class="daily-avg">
          7-day average: <strong style={`color: ${getColor(avgDaily)}`}>{avgDaily.toFixed(0)} µg/m³</strong>
        </p>
      </div>
    )}

    <p class="trends-note">
      Historical data updates hourly. Gaps indicate missing readings.
    </p>
  </section>
)}

