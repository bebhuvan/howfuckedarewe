---
/**
 * What Now? ‚Äî A Survival Guide
 * Visual, punchy, sardonic.
 */
import CityLayout from '../layouts/CityLayout.astro';

const title = "What Now? ‚Äî A Survival Guide";
const description = "Practical advice for surviving India's air quality. Results may vary.";

// Survival tips with effectiveness scores
const survivalTips = [
  { tip: "N95 Mask", score: 85, verdict: "Actually works" },
  { tip: "HEPA Purifier", score: 80, verdict: "If you can afford it" },
  { tip: "Check AQI Daily", score: 50, verdict: "Know your poison" },
  { tip: "Exercise Indoors", score: 45, verdict: "Treadmill life" },
  { tip: "Close Windows", score: 25, verdict: "Bunker mode" },
  { tip: "Stay Hydrated", score: 5, verdict: "Placebo at best" },
  { tip: "Eat Kale", score: 3, verdict: "Feel-good theater" },
];

// The gap visualization
const theGap = {
  you: ["N95 mask", "Air purifier", "Monitor AQI", "Hide indoors"],
  policy: ["Emission standards", "Clean energy", "Stubble solutions", "Law enforcement"],
};
---

<CityLayout title={title} description={description}>
  <div class="survival-page">

    <!-- Visual Hero -->
    <header class="hero">
      <div class="hero-visual">
        <svg class="lungs-icon" viewBox="0 0 120 100" fill="none">
          <!-- Left Lung (Damaged) -->
          <path d="M45 15 C25 15 10 35 10 60 C10 80 20 90 35 90 C45 90 52 82 52 70 L52 30 C52 22 50 15 45 15Z"
                fill="#71717a" stroke="#525252" stroke-width="2"/>
          <!-- Right Lung (Healthy) -->
          <path d="M75 15 C95 15 110 35 110 60 C110 80 100 90 85 90 C75 90 68 82 68 70 L68 30 C68 22 70 15 75 15Z"
                fill="#86efac" stroke="#166534" stroke-width="2"/>
          <!-- Trachea -->
          <path d="M55 5 L55 25 M65 5 L65 25 M55 25 Q60 30 52 40 M65 25 Q60 30 68 40"
                stroke="#737373" stroke-width="3" fill="none"/>
          <!-- Labels -->
          <text x="32" y="98" text-anchor="middle" fill="#525252" font-size="8" font-weight="600">YOURS</text>
          <text x="88" y="98" text-anchor="middle" fill="#166534" font-size="8" font-weight="600">THEIRS</text>
        </svg>
      </div>
      <h1>What Now?</h1>
      <p class="hero-sub">You've seen the numbers. Here's what you can do about them.</p>
      <p class="hero-kicker">Spoiler: Not much.</p>
    </header>

    <!-- Effectiveness Meter Section -->
    <section class="meters-section">
      <h2>Protection Effectiveness</h2>
      <p class="section-sub">Ranked by actual impact on your survival</p>

      <div class="meters">
        {survivalTips.map((item, i) => (
          <div class="meter-row">
            <div class="meter-rank">#{i + 1}</div>
            <div class="meter-content">
              <div class="meter-header">
                <span class="meter-name">{item.tip}</span>
                <span class="meter-verdict">{item.verdict}</span>
              </div>
              <div class="meter-bar">
                <div class="meter-fill" style={`width: ${item.score}%`} data-score={item.score}></div>
                <span class="meter-score">{item.score}%</span>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="meters-note">
        <p>100% would be "breathing clean air." We don't have that option.</p>
      </div>
    </section>

    <!-- The Big Visual: You vs Policy -->
    <section class="the-gap">
      <h2>The Gap</h2>

      <div class="gap-visual">
        <div class="gap-column you">
          <div class="gap-header">
            <span class="gap-icon">üõ°Ô∏è</span>
            <h3>What You Can Do</h3>
          </div>
          <ul>
            {theGap.you.map(item => <li>{item}</li>)}
          </ul>
          <div class="gap-verdict">
            <span class="verdict-label">Impact</span>
            <div class="verdict-bar">
              <div class="verdict-fill" style="width: 15%"></div>
            </div>
            <span class="verdict-pct">~15%</span>
          </div>
        </div>

        <div class="gap-arrow">
          <svg viewBox="0 0 40 80" fill="none">
            <path d="M20 0 L20 60 M10 50 L20 60 L30 50" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>The suffocation zone</span>
        </div>

        <div class="gap-column policy">
          <div class="gap-header">
            <span class="gap-icon">üèõÔ∏è</span>
            <h3>What Policy Must Do</h3>
          </div>
          <ul>
            {theGap.policy.map(item => <li>{item}</li>)}
          </ul>
          <div class="gap-verdict">
            <span class="verdict-label">Impact</span>
            <div class="verdict-bar">
              <div class="verdict-fill policy-fill" style="width: 85%"></div>
            </div>
            <span class="verdict-pct">~85%</span>
          </div>
        </div>
      </div>

      <p class="gap-conclusion">
        You control 15%. They control 85%.
        <strong>Guess which one gets blamed?</strong>
      </p>
    </section>

    <!-- Hard Numbers -->
    <section class="hard-numbers">
      <div class="number-card big">
        <span class="number">71%</span>
        <span class="context">of pollution from sources you can't control</span>
      </div>
      <div class="number-card">
        <span class="number">8√ó</span>
        <span class="context">India's standards are weaker than WHO</span>
      </div>
      <div class="number-card">
        <span class="number">‚Çπ15K</span>
        <span class="context">cheapest purifier (more than minimum wage)</span>
      </div>
      <div class="number-card">
        <span class="number">0</span>
        <span class="context">safe level of PM2.5 exposure</span>
      </div>
    </section>

    <!-- Civic Action Theater -->
    <section class="action-theater">
      <h2>Civic Action Theater</h2>
      <p class="section-sub">Things that feel productive but mostly aren't</p>

      <div class="action-grid">
        <div class="action-item">
          <div class="action-icon">‚úâÔ∏è</div>
          <h4>Write to your MLA</h4>
          <p>Your letter joins thousands being burned right now. Ironic.</p>
          <div class="action-meter" style="--fill: 5%"></div>
        </div>
        <div class="action-item">
          <div class="action-icon">üå≥</div>
          <h4>Plant trees</h4>
          <p>You only need 1.7 billion. That's 2 per person. Start digging.</p>
          <div class="action-meter" style="--fill: 8%"></div>
        </div>
        <div class="action-item">
          <div class="action-icon">üì±</div>
          <h4>Post on social media</h4>
          <p>47 likes from people who already agree. Revolution.</p>
          <div class="action-meter" style="--fill: 2%"></div>
        </div>
        <div class="action-item">
          <div class="action-icon">‚öñÔ∏è</div>
          <h4>File a PIL</h4>
          <p>Courts have been hearing cases since 1985. 39 years.</p>
          <div class="action-meter" style="--fill: 12%"></div>
        </div>
        <div class="action-item highlight">
          <div class="action-icon">‚úàÔ∏è</div>
          <h4>Emigrate</h4>
          <p>The only thing on this list that actually works.</p>
          <div class="action-meter" style="--fill: 95%"></div>
        </div>
      </div>
    </section>

    <!-- The Only Real Advice -->
    <section class="real-advice">
      <div class="advice-content">
        <h2>The Only Real Advice</h2>
        <div class="advice-list">
          <div class="advice-item">
            <span class="advice-num">1</span>
            <div>
              <strong>Buy an N95</strong>
              <p>Not surgical. Not cloth. N95. Fitted properly.</p>
            </div>
          </div>
          <div class="advice-item">
            <span class="advice-num">2</span>
            <div>
              <strong>Get a HEPA purifier</strong>
              <p>For your bedroom at minimum. Run it while you sleep.</p>
            </div>
          </div>
          <div class="advice-item">
            <span class="advice-num">3</span>
            <div>
              <strong>Check AQI before going out</strong>
              <p>Not to feel better. To know what you're breathing.</p>
            </div>
          </div>
          <div class="advice-item">
            <span class="advice-num">4</span>
            <div>
              <strong>Get angry</strong>
              <p>Don't let them tell you "it's just the season."</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="final">
      <h2>Don't Cope.<br/>Get Angry.</h2>
      <p>Anger is the appropriate response to breathing poison.</p>
      <div class="cta-buttons">
        <a href="/" class="btn primary">Check Your City</a>
        <a href="/marketplace" class="btn secondary">The Lung Exchange ‚Üí</a>
      </div>
    </section>

  </div>
</CityLayout>

<style>
  .survival-page {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Hero */
  .hero {
    text-align: center;
    padding: 2rem 0 3rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 3rem;
  }

  .hero-visual {
    margin-bottom: 1.5rem;
  }

  .lungs-icon {
    width: 160px;
    height: 140px;
  }

  .hero h1 {
    font-size: clamp(3rem, 10vw, 5rem);
    margin-bottom: 0.5rem;
    letter-spacing: -0.04em;
  }

  .hero-sub {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
  }

  .hero-kicker {
    font-size: 1rem;
    color: var(--accent);
    font-style: italic;
  }

  /* Meters Section */
  .meters-section {
    margin-bottom: 4rem;
  }

  .meters-section h2,
  .the-gap h2,
  .action-theater h2 {
    text-align: center;
    font-size: 1.75rem;
    margin-bottom: 0.25rem;
  }

  .section-sub {
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .meters {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .meter-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--bg-paper);
    border: 1px solid var(--border);
    border-radius: 8px;
  }

  .meter-rank {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    color: var(--text-light);
    width: 2.5rem;
    flex-shrink: 0;
  }

  .meter-content {
    flex: 1;
  }

  .meter-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .meter-name {
    font-weight: 600;
    font-size: 0.9375rem;
  }

  .meter-verdict {
    font-size: 0.75rem;
    color: var(--text-light);
    font-style: italic;
  }

  .meter-bar {
    height: 24px;
    background: var(--bg);
    border-radius: 4px;
    position: relative;
    overflow: hidden;
  }

  .meter-fill {
    height: 100%;
    border-radius: 4px;
    transition: width 0.5s ease;
  }

  .meter-fill[data-score="85"] { background: linear-gradient(90deg, #166534, #22c55e); }
  .meter-fill[data-score="80"] { background: linear-gradient(90deg, #166534, #22c55e); }
  .meter-fill[data-score="50"] { background: linear-gradient(90deg, #a3a322, #eab308); }
  .meter-fill[data-score="45"] { background: linear-gradient(90deg, #a3a322, #eab308); }
  .meter-fill[data-score="25"] { background: linear-gradient(90deg, #c45a20, #f97316); }
  .meter-fill[data-score="5"] { background: linear-gradient(90deg, #991b1b, #ef4444); }
  .meter-fill[data-score="3"] { background: linear-gradient(90deg, #991b1b, #ef4444); }

  .meter-score {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text);
  }

  .meters-note {
    text-align: center;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px dashed var(--border);
  }

  .meters-note p {
    font-size: 0.875rem;
    color: var(--text-light);
    font-style: italic;
  }

  /* The Gap */
  .the-gap {
    margin-bottom: 4rem;
    padding: 2.5rem;
    background: var(--dark-bg);
    border-radius: 16px;
    color: white;
  }

  .the-gap h2 {
    color: white;
  }

  .the-gap .section-sub {
    color: rgba(255,255,255,0.5);
  }

  .gap-visual {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1.5rem;
    align-items: stretch;
    margin-bottom: 2rem;
  }

  .gap-column {
    padding: 1.5rem;
    border-radius: 12px;
    background: rgba(255,255,255,0.05);
  }

  .gap-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .gap-icon {
    font-size: 1.5rem;
  }

  .gap-header h3 {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
  }

  .gap-column ul {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
  }

  .gap-column li {
    font-size: 0.875rem;
    color: rgba(255,255,255,0.7);
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.05);
  }

  .gap-column li:last-child {
    border-bottom: none;
  }

  .gap-verdict {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .verdict-label {
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255,255,255,0.4);
    width: 3rem;
  }

  .verdict-bar {
    flex: 1;
    height: 8px;
    background: rgba(255,255,255,0.1);
    border-radius: 4px;
    overflow: hidden;
  }

  .verdict-fill {
    height: 100%;
    background: rgba(255,255,255,0.3);
    border-radius: 4px;
  }

  .verdict-fill.policy-fill {
    background: var(--accent);
  }

  .verdict-pct {
    font-size: 0.875rem;
    font-weight: 600;
    width: 3rem;
    text-align: right;
  }

  .gap-arrow {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: rgba(255,255,255,0.3);
  }

  .gap-arrow svg {
    width: 40px;
    height: 80px;
    margin-bottom: 0.5rem;
  }

  .gap-arrow span {
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    writing-mode: vertical-rl;
    text-orientation: mixed;
  }

  .gap-conclusion {
    text-align: center;
    font-size: 1.125rem;
    color: rgba(255,255,255,0.7);
    margin: 0;
  }

  .gap-conclusion strong {
    color: white;
  }

  /* Hard Numbers */
  .hard-numbers {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-bottom: 4rem;
  }

  .number-card {
    text-align: center;
    padding: 1.5rem 1rem;
    background: var(--bg-paper);
    border: 1px solid var(--border);
    border-radius: 12px;
  }

  .number-card.big {
    grid-column: span 4;
    padding: 2rem;
    background: var(--accent);
    border-color: var(--accent);
  }

  .number-card.big .number {
    font-size: 4rem;
    color: white;
  }

  .number-card.big .context {
    color: rgba(255,255,255,0.8);
  }

  .number {
    display: block;
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    color: var(--text);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .context {
    font-size: 0.75rem;
    color: var(--text-secondary);
    line-height: 1.4;
  }

  /* Action Theater */
  .action-theater {
    margin-bottom: 4rem;
  }

  .action-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1rem;
  }

  .action-item {
    padding: 1.25rem;
    background: var(--bg-paper);
    border: 1px solid var(--border);
    border-radius: 8px;
    text-align: center;
  }

  .action-item.highlight {
    background: rgba(22, 101, 52, 0.05);
    border-color: var(--severity-good);
  }

  .action-icon {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  .action-item h4 {
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .action-item p {
    font-size: 0.75rem;
    color: var(--text-secondary);
    line-height: 1.4;
    margin-bottom: 1rem;
  }

  .action-meter {
    height: 4px;
    background: var(--bg);
    border-radius: 2px;
    position: relative;
  }

  .action-meter::after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: var(--fill);
    background: var(--accent);
    border-radius: 2px;
  }

  .action-item.highlight .action-meter::after {
    background: var(--severity-good);
  }

  /* Real Advice */
  .real-advice {
    margin-bottom: 4rem;
    padding: 2.5rem;
    background: var(--bg);
    border-radius: 16px;
  }

  .real-advice h2 {
    text-align: center;
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }

  .advice-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .advice-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .advice-num {
    width: 2rem;
    height: 2rem;
    background: var(--text);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Playfair Display', serif;
    font-size: 1rem;
    flex-shrink: 0;
  }

  .advice-item strong {
    display: block;
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .advice-item p {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    margin: 0;
  }

  /* Final */
  .final {
    text-align: center;
    padding: 3rem 2rem;
    background: rgba(153, 27, 27, 0.05);
    border: 1px solid rgba(153, 27, 27, 0.15);
    border-radius: 16px;
  }

  .final h2 {
    font-size: 2rem;
    color: var(--accent);
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .final p {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn {
    padding: 0.875rem 1.75rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9375rem;
    text-decoration: none;
  }

  .btn.primary {
    background: var(--accent);
    color: white;
  }

  .btn.secondary {
    background: white;
    color: var(--text);
    border: 1px solid var(--border);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .gap-visual {
      grid-template-columns: 1fr;
    }

    .gap-arrow {
      flex-direction: row;
      padding: 1rem 0;
    }

    .gap-arrow svg {
      transform: rotate(90deg);
      width: 60px;
      height: 30px;
    }

    .gap-arrow span {
      writing-mode: horizontal-tb;
    }

    .hard-numbers {
      grid-template-columns: repeat(2, 1fr);
    }

    .number-card.big {
      grid-column: span 2;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }

  @media (max-width: 500px) {
    .hard-numbers {
      grid-template-columns: 1fr;
    }

    .number-card.big {
      grid-column: span 1;
    }
  }
</style>
